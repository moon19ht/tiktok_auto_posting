# TikTok Auto Posting - Environment Variables
# Copy this file to .env and fill in your values

# ==========================================
# Chrome Browser Settings
# ==========================================

# Path to Chrome executable (WSL environment)
# For WSL using Windows Chrome:
CHROME_BINARY_PATH=/mnt/c/Program Files/Google/Chrome/Application/chrome.exe

# Chrome user data directory for persistent login
# WSL path to Windows Chrome profile:
CHROME_USER_DATA_DIR=/mnt/c/Users/YOUR_USERNAME/AppData/Local/Google/Chrome/User Data

# Chrome profile name (default is "Default")
CHROME_PROFILE=Default

# Chrome debugging port for DevTools Protocol
CHROME_DEBUG_PORT=9222

# ==========================================
# TikTok Account Settings
# ==========================================

# TikTok username (optional - for logging purposes)
TIKTOK_USERNAME=your_tiktok_username

# TikTok Login Credentials (for auto login)
TIKTOK_EMAIL=email
TIKTOK_PASSWORD=password

# ==========================================
# Video Upload Settings
# ==========================================

# Directory containing videos to upload
VIDEO_DIRECTORY=/home/moon19ht/tiktok_auto_posting/videos

# Default hashtags (comma-separated)
DEFAULT_HASHTAGS=#fyp,#viral,#tiktok

# Upload interval in seconds (between multiple uploads)
UPLOAD_INTERVAL=60

# ==========================================
# Logging Settings
# ==========================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=/home/moon19ht/tiktok_auto_posting/logs/app.log

# ==========================================
# Selenium Settings
# ==========================================

# Implicit wait time in seconds
IMPLICIT_WAIT=10

# Page load timeout in seconds
PAGE_LOAD_TIMEOUT=60

# Script timeout in seconds
SCRIPT_TIMEOUT=30
